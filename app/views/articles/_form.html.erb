<div class="row">
    <div class="col-xs-12">
        <%= form_for(@article, :html => {class: "row g-3", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :title, class:"form-label" %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", id: "exampleInputEmail1" %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :description, class: "form-label" %><br>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :description, class: "form-control" %>
                </div>
            </div>

            <p>
                <%= f.submit class: "btn btn-primary" %>
            </p>

        <% end %>
    </div>
</div>