<h1>Create Article</h1>

<% if @article.errors.any? %>
    <ul>
        <% @article.errors.full_messages.each do |message| %>
            <li> <%= message %></li>
        <%end%>
    </ul>
<% end %>
<h2>New</h2>
<%= form_with model: @article do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>